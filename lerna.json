{
  "packages": ["packages/hooks", "packages/components/*", "packages/components"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "loglevel": "info",
  "command": {
    "version": {
      "allowBranch": ["master"]
    },
    "publish": {
      "message": "chore(release): обновление версий пакетов",
      "registry": "https://npm.pkg.github.com/gpn-prototypes"
    }
  },
  "changelog": {
    "repo": "gpn-prototypes/vega-ui",
    "cacheDir": ".changelog",
    "labels": {
      "feat": "Обновления",
      "fix": "Фиксы",
      "chore": "Изменения в зависимостях",
      "build": "Правки в билде",
      "refactoring": "Рефакторинг"
    }
  },
  "ignoreChanges": [
    "docs/**",
    "scripts/**",
    "_templates/**",
    ".storybook/**",
    "**/__tests__/**",
    "**/*.md",
    "**/*.mdx",
    "**/*.test.*",
    "**/*.stories.*"
  ]
}
