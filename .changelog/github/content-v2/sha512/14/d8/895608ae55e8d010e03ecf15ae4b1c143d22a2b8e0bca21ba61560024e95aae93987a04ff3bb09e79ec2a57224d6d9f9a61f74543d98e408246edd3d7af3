on\n+        items={tabs}\n+        value={valueTab}\n+        getItemKey={(item) => item.name}\n+        getItemLabel={(item) => item.name}\n+        getItemIcon={withIcon ? (item) => item.icon : undefined}\n+        onChange={({ value }) => setValueTab(value)}\n+      />\n+    </>\n+  );\n+};\n+```\n+\n+### API компонента\n+\n+```ts\n+type TabsProps = {\n+  size: 's' | 'm'; // размер табов\n+  view: 'bordered' | 'clear'; // отображать нижнюю границу\n+  withIcon: boolean; // отображать текст и иконки\n+  onlyIcon: boolean; // отображать только иконки\n+  items: ItemTabs[]; // табы\n+  value: ItemTabs[]; // активный таб\n+  onChange: ({ value }) => void;\n+  getItemKey: (item: ItemTab) => any; // метод для указания key таба\n+  getItemLabel: (item: ItemTab) => any; // метод для указания текста таба\n+  getItemIcon: (item: ItemTab) => any; // метод для отображения иконки в табе\n+};\n+```"},{"sha":"c10b569383f657ab60a97aef65e433ad9dd28fcd","filename":"packages/components/tabs/docs/tabs.png","status":"added","additions":0,"deletions":0,"changes":0,"blob_url":"https://github.com/gpn-prototypes/vega-ui/blob/96232114ff538ef82c31c2145ba3c64443132a7d/packages/components/tabs/docs/tabs.png","raw_url":"https://github.com/gpn-prototypes/vega-ui/raw/96232114ff538ef82c31c2145ba3c64443132a7d/packages/components/tabs/docs/tabs.png","contents_url":"https://api.github.com/repos/gpn-prototypes/vega-ui/contents/packages/components/tabs/docs/tabs.png?ref=96232114ff538ef82c31c2145ba3c64443132a7d"},{"sha":"3d1b7f500edf3c7082c71360dd447f184a8c0dd0","filename":"packages/components/tabs/package.json","status":"added","additions":29,"deletions":0,"changes":29,"blob_url":"https://github.com/gpn-prototypes/vega-ui/blob/96232114ff538ef82c31c2145ba3c64443132a7d/packages/components/tabs/package.json","raw_url":"https://github.com/gpn-prototypes/vega-ui/raw/96232114ff538ef82c31c2145ba3c64443132a7d/packages/components/tabs/package.json","contents_url":"https://api.github.com/repos/gpn-prototypes/