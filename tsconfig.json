{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext", "ES2015"],
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": false,
    "stripInternal": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@gpn-prototypes/vega-hooks": ["packages/hooks/src/index.ts"],
      "@gpn-prototypes/vega-avatar": ["packages/components/avatar/src/index.ts"],
      "@gpn-prototypes/vega-badge": ["packages/components/badge/src/index.ts"],
      "@gpn-prototypes/vega-button": ["packages/components/button/src/index.ts"],
      "@gpn-prototypes/vega-checkbox": ["packages/components/checkbox/src/index.ts"],
      "@gpn-prototypes/vega-choice-group": ["packages/components/choice-group/src/index.ts"],
      "@gpn-prototypes/vega-file": ["packages/components/file/src/index.ts"],
      "@gpn-prototypes/vega-form": ["packages/components/form/src/index.ts"],
      "@gpn-prototypes/vega-icons": ["packages/components/icons/src/index.ts"],
      "@gpn-prototypes/vega-informer": ["packages/components/informer/src/index.ts"],
      "@gpn-prototypes/vega-modal": ["packages/components/modal/src/index.ts"],
      "@gpn-prototypes/vega-radio": ["packages/components/radio/src/index.ts"],
      "@gpn-prototypes/vega-switch": ["packages/components/switch/src/index.ts"],
      "@gpn-prototypes/vega-tabs": ["packages/components/tabs/src/index.ts"],
      "@gpn-prototypes/vega-text": ["packages/components/text/src/index.ts"],
      "@gpn-prototypes/vega-text-field": ["packages/components/text-field/src/index.ts"],
      "@gpn-prototypes/vega-user": ["packages/components/user/src/index.ts"],
      "@gpn-prototypes/vega-dropdown": ["packages/components/dropdown/src/index.ts"],
      "@gpn-prototypes/vega-navigation-list": ["packages/components/navigation-list/src/index.ts"],
      "@gpn-prototypes/vega-page-footer": ["packages/components/page-footer/src/index.ts"],
      "@gpn-prototypes/vega-page-banner": ["packages/components/page-banner/src/index.ts"],
      "@gpn-prototypes/vega-ui": ["packages/components/index.ts"]
    }
  },
  "files": ["./types/assets.d.ts"],
  "include": ["packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
